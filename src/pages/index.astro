---
import WorkCard from "@components/WorkCard.astro";
import Container from "@components/container";
import Heading from "@components/heading";
import SkillCard from "@components/skill_card";
import Layout from "@layouts/Layout.astro";

import fes2024HeadImage from "@assets/images/works/fes2024_screen_shot.png";
import fes2025HeadImage from "@assets/images/works/fes2025_screen_shot.png";
import nulltaskerHeadImage from "@assets/images/works/nulltasker_logo.png";
import latexCalculatorHeadImage from "@assets/images/works/latex_calculator.png";
---

<Layout>
	<Container>
		<Heading> arca0928 </Heading>
		<div>OMUCT 2年知能情報コース</div>
	</Container>
	<Container>
		<Heading id="about" size="medium">About Me</Heading>
		<div>
			大阪公立大学工業高専2年 知能情報コース所属のarcaです。
			<br />
			現在は学友会(生徒会)でwebフロントに携わっており、Rustなども学習中です。
		</div>
	</Container>
	<Container>
		<Heading id="skills">Skills</Heading>
		<div class="flex flex-row flex-wrap">
			<!-- Default set: mdi, Icon size: 64, Icon Color: #c1bfbf -->
			<SkillCard icon="/arduino_icon.svg" title="Arduino" />
			<SkillCard icon="/astro_icon.svg" title="Astro" />
			<SkillCard icon="/python_icon.svg" title="Python" />
			<SkillCard icon="/react_icon.svg" title="React" />
			<SkillCard icon="/rust_icon.svg" title="Rust" />
			<SkillCard icon="/git_icon.svg" title="Git" />
			<SkillCard icon="/github_icon.svg" title="Github" />
		</div>
	</Container>
	<Container>
		<Heading id="works">Works</Heading>

		<div class="flex flex-row flex-wrap">
			<WorkCard
				headImage={fes2024HeadImage}
				title="第60回高専祭特設サイト"
				isOpen={false}
				descPath="@docs/works/fes2024.md"
				techStack={["React", "Tailwind CSS"]}
			/>
			<WorkCard 
				headImage={fes2025HeadImage}
				title="第61回高専祭特設サイト"
				isOpen={false}
				descPath="@docs/works/fes2025.md"
				techStack={["Astro", "React", "UnoCSS"]}
			/>
			<WorkCard
				headImage={nulltaskerHeadImage}
				title="NullTasker"
				isOpen={false}
				descPath="@docs/works/nulltasker.md"
				techStack={["HTML/CSS", "JavaScript", "Node.js"]}
			/>
			<WorkCard
				headImage={latexCalculatorHeadImage}
				title="LaTeX calculator"
				isOpen={false}
				descPath="@docs/works/latex_calculator.md"
				techStack={["Python", "SymPy"]}	
			/>
		</div>
	</Container>
	<div class="my-20" />
</Layout>
